{
    "name": "hynkar/php-starter",
    "description": "My Composer learning project",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Hynkar\\PhpStarter\\": "src/"
        }
    },
    "authors": [
        {
            "name": "KarolH",
            "email": "karol.hynowski@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "nesbot/carbon": "^3.11"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.93",
        "phpunit/phpunit": "^12.5"
    },
	"scripts": {
		"fixer": "vendor/bin/php-cs-fixer fix",
		"check-all": ["@fixer" , "php -r \"echo date('Y-m-d');\""]
	}
}
